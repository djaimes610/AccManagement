@model DocumentApp.Models.ErrorViewModel
@{
    ViewBag.Title = "Inesperado | Seguridad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Inesperado</h2>

<div class="error-page">
    <h2 class="headline text-yellow"> Inesperado</h2>
    <div class="error-content">
        <h3><i class="fa fa-warning text-yellow"></i> Oops! Pagina no encontrada.</h3>
        <p>
            @Model.Encabezado<br />
            @Model.Mensaje <a href=@Url.Action("Index","Home")>@Model.IrAlHome</a>.
        </p>
        <form class="search-form">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button type="submit" name="submit" class="btn btn-warning btn-flat"><i class="fa fa-search"></i></button>
                </div>
            </div><!-- /.input-group -->
        </form>
    </div><!-- /.error-content -->
</div><!-- /.error-page -->